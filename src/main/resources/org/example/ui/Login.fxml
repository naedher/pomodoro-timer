<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<BorderPane styleClass="login-container" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ui.LoginController">
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="login-form">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>

            <Label styleClass="header-title" text="POMODORO TIMER">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>

            <Label text="Login to your account" styleClass="login-subtitle">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>

            <TextField fx:id="emailField" promptText="Email" styleClass="login-field" />
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="login-field" />

            <Button fx:id="loginButton" onAction="#handleLogin" styleClass="login-btn" text="Login" />

            <Label fx:id="errorLabel" styleClass="error-label" visible="false" />

            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" />
                <Button fx:id="registerPageButton" onAction="#handleRegisterPage" styleClass="text-btn" text="Register" />
            </HBox>
        </VBox>
    </center>
</BorderPane>