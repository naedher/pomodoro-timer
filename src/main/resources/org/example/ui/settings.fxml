<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.ui.SettingsController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Timer Settings" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Theme:"/>
    <ComboBox fx:id="themeComboBox" prefWidth="200"/>

    <Separator/>

    <CheckBox fx:id="soundEnabledCheckbox" text="Enable Sound"/>

    <Label text="Alarm Sound:"/>
    <ComboBox fx:id="soundComboBox" prefWidth="200"/>

    <Button fx:id="previewButton" text="Preview Sound" onAction="#previewSound"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Save" onAction="#handleSave" defaultButton="true"/>
    </HBox>
</VBox>