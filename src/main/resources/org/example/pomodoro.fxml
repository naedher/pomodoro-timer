<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="main-container" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.TimerController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <!-- Main content -->
    <center>
        <VBox alignment="CENTER" spacing="30" styleClass="content-area">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>
            <Label styleClass="header-title" text="POMODORO DESKTOP TIMER">
            <font>
               <Font size="29.0" />
            </font></Label>

            <!-- Interval display -->
            <Label fx:id="intervalLabel" styleClass="interval-label" text="Interval: 1/4" />

            <!-- Timer display -->
            <Label fx:id="timerLabel" styleClass="timer" />

            <!-- Mode selection -->
            <HBox alignment="CENTER" spacing="20">
                <ToggleButton fx:id="focusButton" onAction="#setFocus" selected="true" styleClass="mode-button" text="Focus" />
                <ToggleButton fx:id="shortBreakButton" onAction="#setShortBreak" styleClass="mode-button" text="Short Break" />
                <ToggleButton fx:id="longBreakButton" onAction="#setLongBreak" styleClass="mode-button" text="Long Break" />
            </HBox>

            <Button fx:id="debugButton" text="debug(3 sec)" onAction="#debugButton"/>


            <!-- Control buttons -->
            <HBox alignment="CENTER" spacing="25">
                <Button fx:id="startButton" onAction="#startStop" styleClass="start-btn" text="Start" />
                <Button fx:id="resetButton" onAction="#reset" styleClass="reset-btn" text="Reset" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
